extends layout

block content
    h1= title
    if (toShow == null)
        h2 No instance to show
    else
        - let groceriesid = toShow._id
        - let groceries_type = toShow.type
        - let groceries_size = toShow.size
        - let groceries_cost = toShow.cost
        div.container
            div.row
                div.col-md-6
                    div.card
                        div.card-body
                            div.row.mb-2
                                div.col-sm-6.vehiclesAttr Vehicles ID is:
                                div.col-sm-6 #{groceriesid}
                            div.row.mb-2
                                div.col-sm-6.vehiclesAttr Vehicles name is:
                                div.col-sm-6 #{groceries_type}
                            div.row.mb-2
                                div.col-sm-6.vehiclesAttr Vehicles Mileage is:
                                div.col-sm-6 #{groceries_size}
                            div.row.mb-2
                                div.col-sm-6.vehiclesAttr Vehicles Price is:
                                div.col-sm-6 #{groceries_cost}